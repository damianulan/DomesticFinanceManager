<UserControl x:Class="WpfApp1.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" Width="1015" Height="559" Foreground="#eee" Background="#222"
             >
    <Grid>
        <Grid Margin="0,0,0,500" HorizontalAlignment="Right" Width="1015">
            <Label x:Name="TitleLabel" Content="// SETTINGS" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Foreground="#FFEEEEEE" ForceCursor="True" FontSize="24" FontWeight="Light"/>
        </Grid>
        <Grid Margin="0,64,0.2,-4.8" HorizontalAlignment="Right" Width="1015">
            <ComboBox x:Name="LanguageBox" HorizontalAlignment="Left" Margin="139,40,0,0" VerticalAlignment="Top" Width="67" SelectionChanged="LanguageBox_SelectionChanged">

                <ComboBoxItem Content="en"/>
                <ComboBoxItem Content="pl"/>
            </ComboBox>
            <Label x:Name="label1" Content="Language" HorizontalAlignment="Left" Margin="34,42,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Segoe UI Light"/>
        </Grid>
    </Grid>
</UserControl>
